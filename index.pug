mixin navButton(name, link)
    li
      a(href=link)= name

mixin newsSection(feed)
  section
    if feed.type=="seminar"
      img(src="./img/presentation-icon.png")
    else 
      i.fa.fa-window-close.fa-2x.close-button
    div#newsInfos
      header
        time(datetime="#")= feed.createdAt 
        if feed.type=="seminar"
          h1 Prochain seminaire !{feed.titre}
      footer
        p= feed.presentator
      if feed.type=="seminar"
        p= feed.date
        p !{feed.location}
      else
        p !{feed.text}

