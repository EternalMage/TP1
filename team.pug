    mixin name(firstname, lastname, homepage)
        if homepage
            p 
                a(href=homepage) #{firstname} #{lastname}            
        else
            p #{firstname} #{lastname}


    mixin teamCrew(name, members, past)
        section.teamCrew
            h1= name
            ul.container
                each member in members                     
                    if !past
                        if member.current
                            li
                                if member.image
                                    img(src=member.image)
                                else
                                    i.fa.fa-user-circle.fa-5x.img-circle
                                div.crewInfos
                                    +name(member.firstname, member.lastname, member.homepage)
                                    if member.title=="associateprofessor"
                                        p Professeur associé
                                    if member.email
                                        a(href=member.email) #{member.email}
                    else
                        if !member.current
                            li
                                +name(member.firstname, member.lastname, member.homepage)

